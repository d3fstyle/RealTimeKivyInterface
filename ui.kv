#:kivy 1.9.1
#:set bg_color (.93,.93,.93,1)
#:set typo_color (0,0,0,1)
#:set menubutton_color (0.44,0.53,0.73,1)
#:import FadeTransition kivy.uix.screenmanager

<Label>:
    font_name: 'Xolonium'
    color: typo_color
    markup: True
    font_size: self.height*0.5
    text_size: self.size
    
<CheckBox>:
    canvas:
        Color:
            rgba: (0,0,0,1)
        Rectangle:
            source: self._radio_image if self.group else self._checkbox_image
            size: sp(32), sp(32)
            pos: int(self.center_x - sp(16)), int(self.center_y - sp(16))
            
<Manager>:
    id: screen_manager
    screen_main: screen_main
    screen_menu: screen_menu
    size:root.size
    pos:0,0
    MenuScreen:
        id: screen_menu
        name: 'screenMenu'
        manager: screen_manager
        size:root.size
        pos:0,0
    MainScreen:
        id: screen_main
        name: 'screenMain'
        manager: screen_manager
        size:root.size
        pos:0,0
        
